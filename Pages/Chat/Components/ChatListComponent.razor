@using WASMChat.Shared.Models.Chats

@if (Chats is null)
{
    <LoadingComponent/>
}
else
{
    @foreach (ChatModel chat in Chats.OrderBy(c => c.Messages.FirstOrDefault()?.SentTime ?? DateTimeOffset.Now))
    {
        <ListedChatComponent Chat="@chat"/>
    }
}

@code {
    [Parameter, EditorRequired]
    public IEnumerable<ChatModel>? Chats { get; set; }
}