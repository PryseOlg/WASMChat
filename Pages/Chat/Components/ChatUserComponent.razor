@using WASMChat.Shared.Models.Chats
@using System.Diagnostics.CodeAnalysis
@using System.Runtime.InteropServices

@if (User is null)
{
    <LoadingComponent/>
}
else
{
    <pre><img alt="@User.AvatarId" src="api/Files?Id=@User.AvatarId" class="avatar"/> @User.UserName <b>#@User.Id</b></pre>
}

@code {

    [Parameter]
    public ChatUserModel? User { get; set; }
}